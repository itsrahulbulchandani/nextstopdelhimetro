    <style>
        /* Root Variables */
        :root {
            --primary-color: #2563eb;
            --secondary-color: #1e40af;
            --text-color: #1f2937;
            --light-text: #6b7280;
            --background: #ffffff;
            --light-background: #f3f4f6;
            --border-radius: 12px;
            --transition: all 0.3s ease;
        }

        /* Base Styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            line-height: 1.6;
            color: var(--text-color);
        }

        /* Header and Navigation */
        .hero {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
            padding: 2rem 1rem 6rem;
            clip-path: polygon(0 0, 100% 0, 100% 85%, 0 100%);
            overflow: hidden;
        }

        nav {
            max-width: 1200px;
            margin: 0 auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem;
        }

        .logo {
            font-size: 1.5rem;
            font-weight: bold;
        }

        .nav-links a {
            color: white;
            text-decoration: none;
            margin-left: 2rem;
            opacity: 0.9;
            transition: var(--transition);
        }

        .nav-links a:hover {
            opacity: 1;
        }

        .hero-content {
            max-width: 1200px;
            margin: 4rem auto 0;
            padding: 0 1rem;
            display: flex;
            align-items: center;
            gap: 4rem;
        }

        .hero-text {
            flex: 1;
        }

        .hero-image {
            flex: 1;
            display: flex;
            justify-content: center;
        }

        .hero-content h1 {
            font-size: 3rem;
            margin-bottom: 1.5rem;
        }

        .subtitle {
            font-size: 1.25rem;
            opacity: 0.9;
            margin-bottom: 2rem;
        }

        .cta-buttons {
            display: flex;
            gap: 1rem;
        }

        .cta-primary, .cta-secondary {
            padding: 0.75rem 1.5rem;
            border-radius: var(--border-radius);
            text-decoration: none;
            font-weight: 600;
            transition: var(--transition);
        }

        .cta-primary {
            background: white;
            color: var(--primary-color);
        }

        .cta-secondary {
            border: 2px solid white;
            color: white;
        }

        .cta-primary:hover, .cta-secondary:hover {
            transform: translateY(-2px);
        }

        /* Features Section */
        .features {
            padding: 6rem 1rem;
            max-width: 1200px;
            margin: 0 auto;
        }

        .features h2 {
            text-align: center;
            font-size: 2.5rem;
            margin-bottom: 3rem;
        }

        .features-showcase {
            display: flex;
            align-items: center;
            gap: 4rem;
            margin-bottom: 4rem;
        }

        .features-showcase.reverse {
            flex-direction: row-reverse;
        }

        .features-text {
            flex: 1;
        }

        .features-image {
            flex: 1;
            display: flex;
            justify-content: center;
        }

        .feature-card {
            background: var(--background);
            padding: 2rem;
            border-radius: var(--border-radius);
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: var(--transition);
            margin-bottom: 2rem;
        }

        .feature-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 12px rgba(0, 0, 0, 0.1);
        }

        .feature-card i {
            font-size: 2rem;
            color: var(--primary-color);
            margin-bottom: 1rem;
        }

        .feature-card h3 {
            margin-bottom: 1rem;
        }

        /* Perfect For Section */
        .perfect-for {
            padding: 6rem 1rem;
            max-width: 1200px;
            margin: 0 auto;
        }

        .perfect-for h2 {
            text-align: center;
            font-size: 2.5rem;
            margin-bottom: 3rem;
        }

        .user-types {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 2rem;
        }

        .user-type {
            text-align: center;
            padding: 2rem;
            background: var(--light-background);
            border-radius: var(--border-radius);
            transition: var(--transition);
        }

        .user-type:hover {
            transform: translateY(-5px);
        }

        .user-type i {
            font-size: 2rem;
            color: var(--primary-color);
            margin-bottom: 1rem;
        }

        /* How it Works Section */
        .how-it-works {
            background: var(--light-background);
            padding: 6rem 1rem;
        }

        .how-it-works h2 {
            text-align: center;
            font-size: 2.5rem;
            margin-bottom: 3rem;
        }

        .steps-container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .steps {
            display: grid;
            gap: 4rem;
        }

        .step {
            display: flex;
            align-items: center;
            gap: 4rem;
        }

        .step:nth-child(even) {
            flex-direction: row-reverse;
        }

        .step-content {
            flex: 1;
        }

        .step-image {
            flex: 1;
            display: flex;
            justify-content: center;
        }

        .step-number {
            width: 3rem;
            height: 3rem;
            background: var(--primary-color);
            color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 1rem;
            font-weight: bold;
        }

        .step h3 {
            font-size: 1.5rem;
            margin-bottom: 1rem;
            color: var(--text-color);
        }

        .step p {
            color: var(--light-text);
            font-size: 1.1rem;
        }

        /* Phone Mockup Styles */
        .phone-mockup {
            position: relative;
            width: 280px;
            height: 570px;
            background: #1a1a1a;
            border-radius: 55px;
            padding: 8px;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
            animation: float 3s ease-in-out infinite;
        }

        .phone-mockup::before {

            position: absolute;
            top: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 150px;
            height: 25px;
            background: #1a1a1a;
            border-radius: 0 0 20px 20px;
        }

        .app-screenshot {
            width: 100%;
            height: 100%;

            border-radius: 45px;
        }

        /* Footer Styles */
        footer {
            background: var(--text-color);
            color: white;
            padding: 4rem 1rem 2rem;
        }

        .footer-content {
            max-width: 1200px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 2rem;
        }

        .footer-section h3 {
            margin-bottom: 1rem;
        }

        .store-buttons {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .store-button {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.75rem 1rem;
            background: rgba(255, 255, 255, 0.1);
            border-radius: var(--border-radius);
            color: white;
            text-decoration: none;
            transition: var(--transition);
        }

        .store-button:hover {
            background: rgba(255, 255, 255, 0.2);
        }

        /* Animations */
        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .feature-card, .step, .user-type {
            animation: fadeIn 0.5s ease-out forwards;
        }

        @keyframes float {
            0% {
                transform: translateY(0px);
            }
            50% {
                transform: translateY(-10px);
            }
            100% {
                transform: translateY(0px);
            }
        }

        /* Responsive Design */
        @media (max-width: 1024px) {
            .hero-content,
            .features-showcase,
            .step {
                flex-direction: column;
                text-align: center;
                gap: 2rem;
            }

            .features-showcase.reverse,
            .step:nth-child(even) {
                flex-direction: column;
            }

            .hero-content {
                margin-top: 2rem;
            }

            .phone-mockup {
                width: 240px;
                height: 490px;
            }
        }

        @media (max-width: 768px) {
            .hero-content h1 {
                font-size: 2rem;
            }

            .nav-links {
                display: none;
            }

            .cta-buttons {
                flex-direction: column;
            }

            .features-grid, .steps, .user-types {
                grid-template-columns: 1fr;
            }

            .phone-mockup {
                width: 220px;
                height: 450px;
            }

            .step {
                padding: 0 1rem;
            }

            .step-content {
                text-align: center;
            }

            .step-number {
                margin: 0 auto 1rem;
            }

            .steps {
                gap: 3rem;
            }

            h2 {
                font-size: 2rem !important;
                padding: 0 1rem;
            }

            .how-it-works {
                padding: 4rem 0;
            }

            .mobile-menu-btn {
                display: block;
            }

            .nav-links {
                display: none;
                position: absolute;
                top: 100%;
                left: 0;
                right: 0;
                background: var(--primary-color);
                padding: 1rem;
                flex-direction: column;
                align-items: center;
                gap: 1rem;
                z-index: 1000;
            }

            .nav-links.show {
                display: flex;
            }

            .nav-links a {
                margin: 0;
                padding: 0.5rem 0;
                width: 100%;
                text-align: center;
            }
        }

        @media (max-width: 480px) {
            .phone-mockup {
                width: 180px;
                height: 370px;
                border-radius: 35px;
            }

            .phone-mockup::before {
                width: 100px;
                height: 20px;
            }

            .app-screenshot {
                border-radius: 30px;
            }

            .step {
                gap: 2rem;
            }
        }

        /* Mobile Menu Button */
        .mobile-menu-btn {
            display: none;
            background: none;
            border: none;
            color: white;
            font-size: 1.5rem;
            cursor: pointer;
            padding: 0.5rem;
            z-index: 1001;
        }

        .mobile-menu-btn:hover {
            opacity: 0.8;
        }

        @media (max-width: 768px) {
            nav {
                position: relative;
            }

            .mobile-menu-btn {
                display: block;
            }

            .nav-links {
                display: none;
                position: absolute;
                top: 100%;
                left: 0;
                right: 0;
                background: var(--primary-color);
                padding: 1rem;
                flex-direction: column;
                align-items: center;
                gap: 1rem;
                z-index: 1000;
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            }

            .nav-links.show {
                display: flex;
            }

            .nav-links a {
                margin: 0;
                padding: 0.5rem 0;
                width: 100%;
                text-align: center;
                font-size: 1.1rem;
            }

            .nav-links a:hover {
                background: rgba(255, 255, 255, 0.1);
            }
        }
    </style>
</body>
</html> 